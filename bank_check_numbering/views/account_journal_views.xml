<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_account_journal_form_check_numbering" model="ir.ui.view">
        <field name="name">account.journal.form.check.numbering</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.view_account_journal_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='type']" position="after">
                <!-- Settings for check numbering for all journal types -->
                <div class="row">
                    <div class="col-12">
                        <div class="o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="enable_check_numbering"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="enable_check_numbering" string="Enable Check Numbering"/>
                                <div class="text-muted">
                                    Enable automatic check numbering for this journal
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Settings fields for check numbering -->
                <div invisible="not enable_check_numbering" class="row">
                    <div class="col-4">
                        <field name="check_starting_number" 
                               string="Check Starting Number"
                               placeholder="001"/>
                    </div>
                    <div class="col-2">
                        <field name="check_number_digits" 
                               string="Digits"
                               placeholder="3"/>
                    </div>
                    <div class="col-6">
                        <field name="last_check_number" 
                               string="Last Check Number Used"
                               readonly="True"/>
                    </div>
                </div>
                
                <!-- زر إعادة تعيين الترقيم -->
                <div invisible="not enable_check_numbering" class="row">
                    <div class="col-12">
                        <button name="reset_check_numbering" 
                                type="object" 
                                string="Reset Check Numbering" 
                                class="btn-secondary"
                                confirm="Are you sure you want to reset check numbering? This will reset the counter to start from the beginning."/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
