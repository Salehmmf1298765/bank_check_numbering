<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_move_form_check_numbering" model="ir.ui.view">
        <field name="name">account.move.form.check.numbering</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='ref']" position="after">

                <field name="is_check" 
                       string="Is Check"
                       invisible="not journal_supports_checks"
                       widget="boolean_toggle"/>
                

                <field name="journal_supports_checks" invisible="True"/>
            </xpath>


            <xpath expr="//field[@name='journal_id']" position="after">

                <field name="check_number" 
                       string="Check Number"
                       placeholder="Auto-generated when check is selected"
                       invisible="not is_check"
                       readonly="state != 'draft'"/>
            </xpath>
        </field>
    </record>


    <record id="view_account_move_tree_check_numbering" model="ir.ui.view">
        <field name="name">account.move.tree.check.numbering</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">

                <field name="check_number" 
                       string="Check #"
                       optional="show"/>

                <field name="is_check" 
                       string="Is Check"
                       widget="boolean_toggle"
                       optional="hide"/>
            </xpath>
        </field>
    </record>


    <record id="view_account_move_filter_check_numbering" model="ir.ui.view">
        <field name="name">account.move.filter.check.numbering</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_move_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='unposted']" position="after">

                <filter name="checks_only" 
                        string="Checks Only"
                        domain="[('is_check', '=', True)]"
                        help="Show only check entries"/>
            </xpath>
            

            <xpath expr="//group" position="inside">
                <filter name="group_by_journal" 
                        string="Journal"
                        domain="[]"
                        context="{'group_by':'journal_id'}"/>
            </xpath>
        </field>
    </record>

</odoo>
